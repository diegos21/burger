<h1>Hamburgers</h1>

<h2>Hamburgesas sin comer</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Hamburgesas COMIDAS</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add Hamburgesa</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Hamburger name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Status</label><br>
    <input type="radio" name="sleepy" value="1" checked> Comida<br>
    <input type="radio" name="sleepy" value="0"> No comida
  </div>

  <button type="submit">Add Burger</button>
</form>
